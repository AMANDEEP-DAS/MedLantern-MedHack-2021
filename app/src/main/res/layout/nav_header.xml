<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraint_header"
    android:orientation="vertical"
    android:background="@color/baseBlack">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageView_User"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/ic_symbol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:civ_border_color="@color/whiteCardColor"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="1dp"
        app:civ_shadow_color="@color/whiteCardColor"/>


    <TextView
        android:id="@+id/text_UserName_Head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="MedLantern"
        android:textColor="@color/whiteTextColor"
        android:textSize="24sp" />


</LinearLayout>